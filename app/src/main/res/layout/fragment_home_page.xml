<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.HomePageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="287dp"
            android:background="@drawable/fondo_chico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/inicioP5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:paddingLeft="20dp"
                        android:paddingTop="25dp"
                        android:text="@string/inicio"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgArnold"
                        android:layout_width="186dp"
                        android:layout_height="61dp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:paddingLeft="160dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/foto1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/saludoP5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/jua"
                    android:paddingLeft="20dp"
                    android:text="@string/saludo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/saldoTxtP5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/jua"
                    android:paddingLeft="20dp"
                    android:text="@string/saldo"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/saldoPesosP5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:paddingLeft="20dp"
                        android:text="@string/Saldo_dinero"
                        android:textColor="@color/white"
                        android:textSize="40dp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bell_icon" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="392dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btnEnviarDinP5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/send_icon"
                android:text="@string/enviar_dinero"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:theme="@style/Base.Theme.AlkeWalletJavaAndroid.btn"
                app:icon="@drawable/send_icon"

                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnIngresarDinP5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:text="@string/ingresar_dinero"
                app:icon="@drawable/send"
                app:iconPadding="-1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="348dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:id="@+id/historialP5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/jua"
                android:text="@string/historial_trans"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUser1P5"
                    android:layout_width="68dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto2" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUser1P5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:text="@string/user_1"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/fecha1P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:text="@string/fecha_1"
                        android:textColor="@color/plomo"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flecha1P5"
                    android:layout_width="52dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_red" />

                <TextView
                    android:id="@+id/trans1P5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:text="@string/trans_1"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUser2P5"
                    android:layout_width="68dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto3" />

                <LinearLayout
                    android:layout_width="148dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUser2P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/user_2"
                        android:textColor="@color/plomoOscuro"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fecha2P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/fecha_2"
                        android:textColor="@color/plomo"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flecha2P5"
                    android:layout_width="52dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    app:srcCompat="@drawable/arrow_green" />

                <TextView
                    android:id="@+id/trans2P5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:text="@string/trans_2"
                    android:textAlignment="textEnd"
                    android:textColor="@color/plomoOscuro"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUser3P5"
                    android:layout_width="68dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto4" />

                <LinearLayout
                    android:layout_width="148dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUser3P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/user_3"
                        android:textColor="@color/plomoOscuro" />

                    <TextView
                        android:id="@+id/fecha3P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/fecha_3"
                        android:textColor="@color/plomo"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flecha3P5"
                    android:layout_width="52dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_green" />

                <TextView
                    android:id="@+id/trans3P5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:text="@string/trans_3"
                    android:textAlignment="textEnd"
                    android:textColor="@color/plomoOscuro"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUser4P5"
                    android:layout_width="68dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto5" />

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUser4P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:text="@string/user_5"
                        android:textColor="@color/plomoOscuro" />

                    <TextView
                        android:id="@+id/fecha4P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/fecha_4"
                        android:textColor="@color/plomo"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flecha4P5"
                    android:layout_width="52dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_red" />

                <TextView
                    android:id="@+id/trans4P5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:text="@string/trans_4"
                    android:textAlignment="textEnd"
                    android:textColor="@color/plomoOscuro"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgUser5P5"
                    android:layout_width="68dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/foto6" />

                <LinearLayout
                    android:layout_width="142dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nomUser5P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/user_4"
                        android:textColor="@color/plomoOscuro" />

                    <TextView
                        android:id="@+id/fecha5P5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua"
                        android:text="@string/fecha_5"
                        android:textColor="@color/plomo"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/flecha5P5"
                    android:layout_width="52dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arrow_green" />

                <TextView
                    android:id="@+id/trans5P5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:text="@string/trans_5"
                    android:textAlignment="textEnd"
                    android:textColor="@color/plomoOscuro"
                    android:textSize="16sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>